{% extends 'layouts/default.html.twig' %}

{% block title %}on écoute quoi maintenant ?{% endblock %}
{% block bodyclass %}home{% endblock %}

{% block main %}
    {% if albumsPlayed %}
        <section class="suggest">
            <header>
                <h2>
                    <i class="fas fa-lightbulb"></i>
                    pourquoi pas…
                </h2>
                <p>Voici une petite sélection basée sur vos goûts :</p>
            </header>

            {% include 'partials/_albums.html.twig' with {'albums': albumsPlayed, 'home': true, 'alt': 'alt'} %}
        </section>
    {% endif %}

    {% if albumsLastListened %}
        <section class="lastlistened">
            <header>
                <h2>
                    <i class="fas fa-fast-forward"></i>
                    dernières écoutes
                </h2>
                <p>Les derniers albums que vous avez écoutés :</p>
            </header>

            {% include 'partials/_albums.html.twig' with {'albums': albumsLastListened, 'home': true, 'alt': ''} %}
        </section>
    {% endif %}

    {% if categories | length > 0 %}
        <section class="categories">
            <header>
                <h2>
                    <i class="fas fa-list-alt"></i>
                    dans une catégorie
                </h2>
                <p>Voici la liste de vos catégories de musiques :</p>
            </header>

            {% include 'partials/_categories.html.twig' with {'categories': categories, 'home': true, 'alt': 'alt'} %}
        </section>
    {% endif %}

    {% if artists | length > 0 %}
        <section class="artists">
            <header>
                <h2>
                    <i class="fas fa-list-alt"></i>
                    ou par artiste
                </h2>
                <p>Voici la liste de vos artistes :</p>
            </header>

            {% include 'partials/_artists.html.twig' with {'artists': artists, 'home': true, 'alt': ''} %}
        </section>
    {% endif %}
{% endblock %}
