<div class="app-grid">
    {% for category in categories %}
        <article class="grid-item">
            {% if home is not defined %}
                <div class="grid-item-actions">
                    <a href="{{ path('category.edit', {'slug': category.slug}) }}">
                        <i class="fas fa-edit"></i>
                    </a>
                    {{ include('category/_delete_form.html.twig') }}
                </div>
            {% endif %}
            <a href="{{ path('category.show', {'slug': category.slug}) }}">
                <img src="
                        {% if category.cover %}
                            {{ asset('img/categories/' ~ category.cover) }}
                        {% else %}
                            {{ asset('img/categories/default.png') }}
                        {% endif %}
                    "
                        class="grid-item-image"
                        alt="{{ category.name }}"
                />
            </a>
            <h3 class="grid-item-title mb-1">
                <a href="{{ path('category.show', {'slug': category.slug}) }}">{{ category.name }}</a>
            </h3>
            <div class="grid-item-stats">
                <a href="{{ path('artist', {'categorySlug': category.slug}) }}" class="grid-item-text">
                    <i class="fas fa-users"></i>
                    {{ category.artists | length }} artiste{% if category.artists | length > 1 %}s{% endif %}
                </a>
                <a href="{{ path('album', {'categorySlug': category.slug}) }}" class="grid-item-text">
                    <i class="fas fa-record-vinyl"></i>
                    {{ category.albums | length }} album{% if category.albums | length > 1 %}s{% endif %}
                </a>
            </div>
        </article>
    {% endfor %}
</div>
