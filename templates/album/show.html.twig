{% extends 'layouts/default.html.twig' %}

{% block title %}détails de l'album{% endblock %}
{% block bodyclass %}album{% endblock %}

{% block main %}
    <section>
        <header>
            <h2>
                <i class="fas fa-list-alt"></i>
                gérez vos albums
            </h2>
        </header>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ album.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ album.title }}</td>
                </tr>
                <tr>
                    <th>Slug</th>
                    <td>{{ album.slug }}</td>
                </tr>
                <tr>
                    <th>Cover</th>
                    <td>{{ album.cover }}</td>
                </tr>
                <tr>
                    <th>Year</th>
                    <td>{{ album.year }}</td>
                </tr>
                <tr>
                    <th>NbPlays</th>
                    <td>{{ album.nbPlays }}</td>
                </tr>
                <tr>
                    <th>LastListened</th>
                    <td>{{ album.lastListened ? album.lastListened|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('album') }}">back to list</a>

        <a href="{{ path('album.edit', {'id': album.id}) }}">edit</a>

        {{ include('album/_delete_form.html.twig') }}
    </section>
{% endblock %}
