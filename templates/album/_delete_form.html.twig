<form method="post" action="{{ path('album.delete', {'id': album.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet album ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ album.id) }}">
    <button class="btn">
        <i class="fas fa-trash-alt"></i>
    </button>
</form>
