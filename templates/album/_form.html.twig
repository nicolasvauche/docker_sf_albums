{{ form_start(form, {'attr': {'class': 'app-form'}}) }}
    {{ form_widget(form) }}

    {% if album %}
        <img src="
                    {% if album.cover %}
                     {{ asset('img/albums/' ~ album.cover) }}
                    {% else %}
                        {{ asset('img/albums/default.png') }}
                    {% endif %}
                "
                alt="{{ album.title }}"
        />
    {% endif %}
<button class="btn">{{ button_label|default('Sauvegarder') }}</button>
{{ form_end(form) }}
