{% extends 'layouts/default.html.twig' %}

{% block title %}g√©rez vos albums{% endblock %}
{% block bodyclass %}album{% endblock %}

{% block main %}
    <section>
        <header>
            <h2>
                <i class="fas fa-record-vinyl"></i>
                {% if category %}
                    les albums {{ category.name }}
                {% else %}
                    tous les albums
                {% endif %}
                ({{ albums | length }})
            </h2>
        </header>

        {% include 'partials/_albums.html.twig' with {'albums': albums, 'alt': 'alt'} %}

        <div class="actions">
            <a href="{{ path('album.new') }}">
                <i class="fas fa-plus-circle"></i>
                nouvel album
            </a>
        </div>
    </section>
{% endblock %}
