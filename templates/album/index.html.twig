            <div class="actions">
                <a href="{{ path('album.new') }}">
                    <i class="fas fa-plus-circle"></i>
                    nouvel album
                </a>
            </div>
        </header>

        {% include 'partials/_albums.html.twig' with {'albums': albums, 'alt': 'alt'} %}
    </section>
{% endblock %}
