<form method="post" action="{{ path('artist.delete', {'id': artist.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet artiste ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ artist.id) }}">
    <button class="btn">
        <i class="fas fa-trash-alt"></i>
    </button>
</form>
