{% extends 'layouts/default.html.twig' %}

{% block title %}détails de l'artiste{% endblock %}
{% block bodyclass %}artist{% endblock %}

{% block main %}
    <section>
        <header>
            <h2>
                <i class="fas fa-list-alt"></i>
                gérez vos artistes
            </h2>
        </header>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ artist.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ artist.name }}</td>
                </tr>
                <tr>
                    <th>Cover</th>
                    <td>{{ artist.cover }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('artist') }}">back to list</a>

        <a href="{{ path('artist.edit', {'id': artist.id}) }}">edit</a>

        {{ include('artist/_delete_form.html.twig') }}
    </section>
{% endblock %}
